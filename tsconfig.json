{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "*": ["./*"],
      "@apis/*": ["src/apis/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@env": [".env"],
      "@hooks/*": ["src/hooks/*"],
      "@recoil/*": ["src/recoil/*"],
      "@screens/*": ["src/screens/*"],
      "@styles/*": ["src/styles/*"],
      "@type/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
